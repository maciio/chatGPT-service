<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="chatgpt-service">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%t] %-5level: %C{1.} %msg%n%throwable"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.maciio.chatgptservice" level="all" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Root level="error">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
